<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TimeForBattle.ViewModel"
             x:Class="TimeForBattle.View.CreatureDetailsPage"
             x:DataType="viewmodel:CreatureDetailsViewModel"
             Title="Details">
    
    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="10">
        <Label Text="Name:" Grid.Row="0" />
        <Label Text="Type:" Grid.Row="1" />
        <Label Text="Initiative Bonus:" Grid.Row="2" />
        <Label Text="HP:" Grid.Row="3" />

        <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="1" />
        <Label Text="{Binding Type}" Grid.Row="1" Grid.Column="1" />
        <Label Text="{Binding Bonus}" Grid.Row="2" Grid.Column="1" />
        <HorizontalStackLayout Grid.Row="3" Grid.Column="1" >
            <Label Text="{Binding CurrentHP}"/>
            <Label Text="/"/>
            <Label Text="{Binding MaximumHP}"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>