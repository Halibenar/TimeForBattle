<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TimeForBattle.Model"
             xmlns:viewmodel="clr-namespace:TimeForBattle.ViewModel"
             xmlns:converters="clr-namespace:TimeForBattle.Converters"
             x:DataType="viewmodel:MainMenuViewModel"
             x:Class="TimeForBattle.View.MainMenuPage"
             Title="{Binding Title}">

    <Grid ColumnDefinitions="*,*"
          ColumnSpacing="0"
          RowDefinitions="Auto,Auto,*">

        <Entry  Grid.Column="0"
                Grid.Row="0"
                Text="{Binding NewCombatName}" />
        <Button Grid.Column="1"
                Grid.Row="0"
                Text="Sort"
                Command="{Binding NewCombatCommand}"/>
        <ScrollView Grid.Row="2"
                    Grid.ColumnSpan="2">
            <FlexLayout BackgroundColor="Transparent"
                        BindableLayout.ItemsSource="{Binding Combats}"
                        Direction="Column"
                        Wrap="NoWrap"
                        JustifyContent="Start"
                        AlignContent="Start">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="model:Combat">
                        <HorizontalStackLayout HorizontalOptions="Center">

                            <Label Text="{Binding Name}"
                                   FontSize="20"
                                   VerticalOptions="Center" />
                            <Button Text="Load"
                                    CommandParameter="{Binding .}"
                                    Command="{Binding x:DataType='viewmodel:MainMenuViewModel', Source={RelativeSource AncestorType={x:Type viewmodel:MainMenuViewModel}}, Path=LoadCombatCommand}" />
                            <Button Text="Del"
                                    CommandParameter="{Binding .}"
                                    Command="{Binding x:DataType='viewmodel:MainMenuViewModel', Source={RelativeSource AncestorType={x:Type viewmodel:MainMenuViewModel}}, Path=DeleteCombatCommand}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>
    </Grid>
</ContentPage>