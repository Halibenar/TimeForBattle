<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeForBattle.Views.AddCharacterPage"
             xmlns:viewmodels="clr-namespace:TimeForBattle.ViewModels"
             x:DataType="viewmodels:AddCharacterViewModel"
             Title="AddCharacterPage">
    <VerticalStackLayout Padding="10,0,10,0" >
        <Entry Text="{Binding CharacterName}" Placeholder="Enter Name" />
        <Entry Text="{Binding CharacterBonus}" Placeholder="Enter Initiative Bonus" />
        <Entry Text="{Binding CharacterType}" Placeholder="Enter Type" />
        <Button x:Name="btnSaveUpdate" Text="Save" Command="{Binding AddCharacterCommand}" />
    </VerticalStackLayout>
</ContentPage>